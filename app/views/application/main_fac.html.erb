<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    max-height: 100px;
    width: 100%;
}

#title{
  color: black;
  background-color: white;
}

#table-wrapper {
  position:relative;
}

#table-scroll {
  height:150px;
  overflow:auto;  
  margin-top:20px;
  width: 50%;
}

tr:nth-child(even) {
    background-color: #dddddd;
}

tr:nth-child(odd) {
  color: black;
  background-color: gray;
}

#table-wrapper table thead th .text {
  position:relative;   
  top:-20px;
  z-index:2;
  height:20px;
  width:35%;
  border:1px solid red;
}

</style>

<h1 class="title">Pagina principal do facilitador</h1>

<div id="table-wrapper">
    <div id="table-scroll">
        <table>
            <thead">
                <tr><th id="title">Notificações</th></tr>
            </thead>
            <tbody>
                <% Notification.all.each do |notif| %>
                  <tr><td><%= notif.message %></td></tr>
                <% end %>
            </tbody>
            
        </table>
    </div>
</div>

<br>
<br>

<%= link_to 'Requisitar Acesso', new_request_path %> <br>

